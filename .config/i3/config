# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
# To make rofi theme work copy and paste the theme in ~/.Xresources and then run "xrdb -merge .Xresources" 

bindsym $mod+d exec rofi -show run -lines 6 -eh 2 -width 1400 -padding 250 -opacity "95" -font "System San Francisco Display 18"

