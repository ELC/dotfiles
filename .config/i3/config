#Screen Shots
bindsym Print exec scrot -q 100 '%Y.%m.%d_%H.%M.%S.png' -e 'mv $f ~/Pictures/screenshots/'

bindsym $mod+Print exec scrot -u -q 100 '%Y.%m.%d_%H.%M.%S.png' -e 'mv $f ~/Pictures/screenshots/'

bindsym $mod+Shift+Print exec \
    import -window $( \
        i3-msg -t get_tree | \
        jq 'recurse(.nodes[]) | select(.focused).window' \
    ) png:- | \
    xclip -selection clipboard -t image/png

